                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ProgressBar Name="ProgressBar0" Background="Black" BorderBrush="#FF08DC11" Margin="5,51,5,10"/>
                </Grid>
                <Grid Grid.Column="1">
                    <ProgressBar Name="ProgressBar1" Background="Black" BorderBrush="#FF08DC11" Margin="5,51,5,10"/>
